<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_top_small">
        <LinearLayout
            android:layout_width="@dimen/dp_301"
            android:layout_height="@dimen/dp_28"
            android:layout_weight="1"
            android:background="@drawable/shape_white_corner_bg"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/icon_search_gray"
                android:layout_marginLeft="@dimen/dp_8"/>
            <EditText
                android:id="@+id/edt_keyword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:hint="请输入搜索关键词"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_8"
                android:textColor="@color/color_22262A"
                android:paddingRight="@dimen/dp_5"
                android:textColorHint="@color/color_ABAFB3"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_28"
            android:text="取消"
            android:onClick="onClick"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorWhite"
            android:layout_gravity="right|center_vertical"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_null_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@drawable/icon_null_contact"/>
            <TextView
                android:id="@+id/tv_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_22262A"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_12"
                android:text="没有搜索到符合条件的联系人"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>