<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="A"
        android:gravity="center_vertical"
        android:textColor="@color/color_22262A"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/ll_contact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_selector"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/selector_btn_circle"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_head"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:src="@drawable/img_head"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/color_22262A"
                tools:text="小白"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_toRightOf="@+id/civ_head"
                android:layout_alignTop="@+id/civ_head"/>
            <TextView
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="广州实地集团/技术部"
                android:textColor="@color/color_53585C"
                android:layout_toRightOf="@+id/civ_head"
                android:layout_alignBottom="@+id/civ_head"
                android:layout_marginLeft="@dimen/dp_16"
                android:textSize="@dimen/sp_12"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0d5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@color/color_bg"/>
</LinearLayout>