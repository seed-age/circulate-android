<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_menu_bg">

        <TextView
            android:id="@+id/tv_sort_des"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="按时间降序"
            android:textColor="@color/color_565656"
            android:textSize="@dimen/sp_15"
            android:textStyle="italic"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e6e6ed"
            />
        <TextView
            android:id="@+id/tv_sort_asc"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="按时间升序"
            android:textColor="@color/color_565656"
            android:textSize="@dimen/sp_15"
            android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_menu_bg"
        android:layout_marginTop="@dimen/sp_15">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_ABAFB2"
            android:textSize="@dimen/sp_15"
            android:textStyle="italic"/>

    </LinearLayout>
</LinearLayout>