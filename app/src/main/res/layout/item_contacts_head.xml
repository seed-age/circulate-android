<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="horizontal"
        android:background="@drawable/shape_searchbar_bg"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/icon_search_gray"
            android:layout_marginLeft="@dimen/dp_8"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="搜索"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_8"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_organization"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_organization_structure"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组织架构"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/color_22262A"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0d5"
        android:background="@color/color_204_204_204"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"/>
    <LinearLayout
        android:id="@+id/ll_common_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_group_public"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公用组"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/color_22262A"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0d5"
        android:background="@color/color_204_204_204"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"/>
    <LinearLayout
        android:id="@+id/ll_private_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16">
        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/icon_group_private"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="私人组"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_12"
            android:textColor="@color/color_22262A"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0d5"
        android:background="@color/color_204_204_204"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_20"/>
</LinearLayout>