<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <solid android:color="@color/color_204_204_204"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:startColor="@color/color_008cd6"
                    android:centerColor="@color/color_008cd6"
                    android:centerY="0.75"
                    android:endColor="@color/color_008cd6"
                    android:angle="270"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <solid android:color="@color/color_008cd6"/>
            </shape>
        </clip>
    </item>
</layer-list>