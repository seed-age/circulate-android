<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dp_296"
              android:layout_height="@dimen/dp_196"
              android:orientation="vertical"
              android:paddingTop="@dimen/dp_12"
              android:paddingLeft="@dimen/dp_12"
              android:paddingRight="@dimen/dp_12"
              android:paddingBottom="@dimen/dp_5"
    android:background="@color/colorWhite">
    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_140"
        android:background="@color/color_search_bg"
        android:gravity="top|left"
        android:inputType="text"
        android:hint="请输入传阅消息备注"
        android:padding="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:text="已阅"
        android:textColorHint="@color/color_ABAFB3"
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/no"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_22262A"/>
        <View
            android:layout_width="@dimen/dp_0d5"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/color_204_204_204"/>
        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_008cd6"/>
    </LinearLayout>
</LinearLayout>