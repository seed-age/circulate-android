<?xml version="1.0" encoding="utf-8"?>
<cc.seedland.oa.circulate.view.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 菜单布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_56"
            android:layout_height="match_parent"
            android:background="@color/color_FF5151"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
    <!--内容布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:src="@drawable/img_head" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/civ_head"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@+id/civ_head"
            android:textColor="@color/color_22262A"
            android:textSize="@dimen/sp_15"
            tools:text="阿水" />

        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/civ_head"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:textColor="@color/color_53585C"
            android:textSize="@dimen/sp_12"
            tools:text="广州实地集团/技术部" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0d5"
            android:layout_alignParentBottom="true"
            android:background="@color/color_204_204_204" />
    </RelativeLayout>
</cc.seedland.oa.circulate.view.SwipeLayout>