<?xml version="1.0" encoding="utf-8"?>
<cc.seedland.oa.circulate.view.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- 菜单布局 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="@dimen/dp_56"
            android:layout_height="match_parent"
            android:background="@color/color_FF5151"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_15"/>

    </LinearLayout>
    <!--内容布局-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_76"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/civ_head"
            tools:text="张三"
            android:textColor="@color/color_22262A"
            android:textSize="@dimen/sp_15"
            android:layout_alignTop="@+id/civ_head"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:id="@+id/tv_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/civ_head"
            tools:text="广州实地集团/产品部"
            android:textColor="@color/color_53585C"
            android:textSize="@dimen/sp_12"
            android:layout_alignBottom="@+id/civ_head"
            android:layout_marginLeft="@dimen/dp_12"/>
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="未确认"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/civ_head"
            android:textColor="@color/color_53585C"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0d5"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:background="@color/color_204_204_204"/>
    </RelativeLayout>
</cc.seedland.oa.circulate.view.SwipeLayout>